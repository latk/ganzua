{
  "$defs": {
    "LockedPackage": {
      "properties": {
        "version": {
          "title": "Version",
          "type": "string"
        },
        "source": {
          "anyOf": [
            {
              "enum": [
                "pypi",
                "default",
                "other"
              ],
              "type": "string"
            },
            {
              "$ref": "#/$defs/SourceRegistry"
            },
            {
              "$ref": "#/$defs/SourceDirect"
            }
          ],
          "title": "Source"
        }
      },
      "required": [
        "version",
        "source"
      ],
      "title": "LockedPackage",
      "type": "object"
    },
    "SourceDirect": {
      "description": "The package is sourced from a specific URL or path, e.g. a Git repo or workspace path.",
      "properties": {
        "direct": {
          "description": "URL or path to the package (directory or archive).",
          "title": "Direct",
          "type": "string"
        },
        "subdirectory": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Only allowed if the source points to an archive file.",
          "title": "Subdirectory"
        }
      },
      "required": [
        "direct"
      ],
      "title": "SourceDirect",
      "type": "object"
    },
    "SourceRegistry": {
      "description": "The package is sourced from a third party registry.",
      "properties": {
        "registry": {
          "description": "URL or path to the registry.",
          "title": "Registry",
          "type": "string"
        }
      },
      "required": [
        "registry"
      ],
      "title": "SourceRegistry",
      "type": "object"
    }
  },
  "properties": {
    "packages": {
      "additionalProperties": {
        "$ref": "#/$defs/LockedPackage"
      },
      "title": "Packages",
      "type": "object"
    }
  },
  "required": [
    "packages"
  ],
  "title": "Lockfile",
  "type": "object"
}
